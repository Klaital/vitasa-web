<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Efilers needed basic</th>
      <th>Efilers needed advanced</th>
      <th>Calendar</th>
      <th>Day of week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= shift.efilers_needed_basic %></td>
        <td><%= shift.efilers_needed_advanced %></td>
        <td><%= shift.calendar_id %></td>
        <td><%= shift.day_of_week %></td>
        <td><%= link_to 'Show', site_calendar_shift_path(shift.calendar.site, shift.calendar, shift) %></td>
        <td><%= link_to 'Edit', edit_site_calendar_shift_path(shift.calendar.site, shift.calendar, shift) %></td>
        <td><%= link_to 'Destroy', site_calendar_shift_path(shift.calendar.site, shift.calendar, shift), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_site_calendar_shift_path(@site, @calendar) %>
