<% provide(:title, 'Update User Settings') %>
<h1>User Edit</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

    <% if current_user == @user %>
        <h3> Password Reset </h3>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    <% end %>
    
        <h3> Update Role Grants </h3>
        <p>Current Roles: <%= @user.roles.collect{|r| r.name}.join(', ') %>
        <%= f.select(:roles, Role.all.collect {|role| [role.name, role.id]}, {prompt: 'Select Roles'}, {multiple: true}) %>

      <%= f.submit "Update account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
