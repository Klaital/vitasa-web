<p>
  <strong>Name:</strong>
  <%= @site.name %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @site.slug %>
</p>

<p>
  <strong>Address</strong>
  <%= @site.street %>, <%= @site.city %>, <%= @site.state %> <%= @site.zip %>
</p>

<p>
  <strong>Google Place ID:</strong>
  <%= @site.google_place_id %>
</p>

<p>
  <strong>Coordinates:</strong>
  <%= @site.latitude %>, <%= @site.longitude %>
</p>

<p>
  <strong>Site Coordinators:</strong>
  <ul>
    <% @site.coordinators.each do |sc| %>
    <li><%= sc.name %> (<%= sc.email %>)</li>
    <% end %>
  </ul>

</p>

<p>
  <strong>Current Site Status:</strong>
  <%= @site.sitestatus %>
</p>

<p>
  <strong>Site Features:</strong>
  <% if @site.site_features.empty? %>
  <p>-none-</p>
  <% else %>
    <ul>
    <% @site.site_features.each do |feature| %>
      <li><%= feature.feature %></li>
    <% end %>
    </ul>
  <% end %>

<p>
  <strong>Site Calendar Deviations</strong>
  <table>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Close</th>
      <th>eFilers Needed</th>
    </tr>
    <% @site.calendars.each do |calendar_override| %>
    <tr id="shift-row-<%= calendar_override.id %>" class="shift-row">
      <td><%= calendar_override.date %></td>
      <td><%= calendar_override.open %></td>
      <td><%= calendar_override.close %></td>
      <td><%= calendar_override.efilers_needed %></td>
    </tr>
    <% end %>
  </table>
</p>


<%= link_to 'Edit', edit_site_path(@site) %> |
<%= link_to 'Back', sites_path %>
