<p>
  <strong>Name:</strong>
  <%= @site.name %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @site.slug %>
</p>

<p>
  <strong>Address</strong>
  <%= @site.street %>, <%= @site.city %>, <%= @site.state %> <%= @site.zip %>
</p>

<p>
  <strong>Google Place ID:</strong>
  <%= @site.google_place_id %>
</p>

<p>
  <strong>Coordinates:</strong>
  <%= @site.latitude %>, <%= @site.longitude %>
</p>

<p>
  <strong>Site Coordinator:</strong>
  <%= (@sitecoordinator.nil?) ? 'None Assigned' : @sitecoordinator.email %>
</p>
<p>
  <strong>Backup Site Coordinator:</strong>
  <%= (@backup_coordinator.nil?) ? 'None Assigned' : @backup_coordinator.email %>
</p>

<p>
  <strong>Current Site Status:</strong>
  <%= @site.sitestatus %>
</p>

<p>
  <strong>Site Features:</strong>
  <% if @site.site_features.empty? %>
  <p>-none-</p>
  <% else %>
    <ul>
    <% @site.site_features.each do |feature| %>
      <li><%= feature.feature %></li>
    <% end %>
    </ul>
  <% end %>

<p>
  <strong>Shift Calendar</strong>
  <table>
    <tr>
      <th colspan="2"></th>
      <th colspan="2">eFilers Needed</th>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Basic</th>
      <th>Advanced</th>
      <th>Backup Coordinator?</th>
    </tr>
    <% @site.calendars.each do |calendar_override| %>
      <% calendar_override.shifts.each do |shift| %>
    <tr>
      <td><%= calendar_override.date %></td>
      <td><%= link_to "#{shift.start_time} - #{shift.end_time}", site_calendar_shift_path(@site.slug, calendar_override, shift) %></td>
      <td><%= shift.efilers_needed_basic %></td>
      <td><%= shift.efilers_needed_advanced %></td>
      <td><%= calendar_override.backup_coordinator_today ? 'âœ“' : '' %></td>
    </tr>
      <% end %>
    <% end %>
  </table>
</p>

<p>
<strong>Volunteer Signups</strong>
<table>
  <tr>
    <th>Date</th>
    <th>Shift</th>
    <th>Name</th>
  </tr>
  <% @site.calendars.each do |calendar| %>
    <% calendar.shifts.order(:start_time => :asc).each do |shift| %>
      <% shift.signups.each do |signup| %>
    <tr>
      <td><%= calendar.date %></td>
      <td><%= signup.shift.start_time %> - <% signup.shift.end_time %></td>
      <td><%= link_to signup.user.name, user_path(signup.user) %></td>
    </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
</p>

<%= link_to 'Edit', edit_site_path(@site) %> |
<%= link_to 'Back', sites_path %>
