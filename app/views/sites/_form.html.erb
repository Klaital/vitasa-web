<%= form_for(site) do |f| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>

  <div class="field">
    <%= f.label :google_place_id, 'Google Maps Place ID' %>
    <%= f.text_field :google_place_id %>
  </div>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.text_field :longitude %>
  </div>

  <div class="field">
    <%= f.label :sitecoordinator, 'Site Coordinator' %>
    <%= f.select :sitecoordinator,
                options_for_select(
                    @eligible_sitecoordinators,
                    site.sitecoordinator
                )
    %>
  </div>

  <div class="field">
    <%= f.label :sitestatus, 'Current Status' %>
    <%= f.select :sitestatus,
                options_for_select(
                  Site::VALID_SITE_STATUSES,
                  site.sitestatus
                )
    %>
  </div>

  <strong>Default Hours</strong>
  <table>
    <tr><th>Day</th><th>Open Time</th><th>Close Time</th></tr>
    <tr>
      <td>Monday</td>
      <td><%= f.text_field :monday_open %></td>
      <td><%= f.text_field :monday_close %></td>
    </tr>
    <tr>
      <td>Tuesday</td>
      <td><%= f.text_field :tuesday_open %></td>
      <td><%= f.text_field :tuesday_close %></td>
    </tr>
    <tr>
      <td>Wednesday</td>
      <td><%= f.text_field :wednesday_open %></td>
      <td><%= f.text_field :wednesday_close %></td>
    </tr>
    <tr>
      <td>Thursday</td>
      <td><%= f.text_field :thursday_open %></td>
      <td><%= f.text_field :thursday_close %></td>
    </tr>
    <tr>
      <td>Friday</td>
      <td><%= f.text_field :friday_open %></td>
      <td><%= f.text_field :friday_close %></td>
    </tr>
    <tr>
      <td>Saturday</td>
      <td><%= f.text_field :saturday_open %></td>
      <td><%= f.text_field :saturday_close %></td>
    </tr>
    <tr>
      <td>Sunday</td>
      <td><%= f.text_field :sunday_open %></td>
      <td><%= f.text_field :sunday_close %></td>
    </tr>

  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
